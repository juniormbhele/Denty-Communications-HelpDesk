<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.helpdesk.login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.helpdesk.home</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signUp</servlet-name>
        <servlet-class>com.helpdesk.signUp</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>signUp</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tickets</servlet-name>
        <servlet-class>com.helpdesk.tickets</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>tickets</servlet-name>
        <url-pattern>/tickets</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>displayUsers</servlet-name>
        <servlet-class>com.helpdesk.displayUsers</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>displayUsers</servlet-name>
        <url-pattern>/displayUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Users</servlet-name>
        <servlet-class>com.helpdesk.Users</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/Users</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>